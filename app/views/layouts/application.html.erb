<!DOCTYPE html>
<html>
  <head>
    <title>NourishParty</title>
    <%= csrf_meta_tags %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <div class='.whoami'>
          Hi, <%= current_user.email %>
        </div>
      <% end %>
        <nav>
          <% if current_user && current_user.instance_admin? %>
            <%= link_to t('admin.shared.links.pending_projects'), admin_pending_projects_path %>
            <%= link_to t('admin.shared.links.moderator_actions'), admin_moderator_actions_path %>
          <% end %>
          <% if current_user %>
            <%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to t('devise.shared.links.sign_in'), new_user_session_path %>
            <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path %>
          <% end %>
        </nav>
    </header>

    <main class="<%= yield(:main_class).present? ? yield(:main_class) : '--primary-layout' %>">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
